<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:stretchColumns="1">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:columnWidth="320dp"
            android:orientation="horizontal"
            android:rowCount="4"
            android:stretchMode="columnWidth" >

            <LinearLayout
                android:id="@+id/topleft"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_column="0">
                <ImageView
                    android:id="@+id/myimagesatic1"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mage" />

                <ImageView
                    android:id="@+id/myimage1"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:src="@drawable/dk" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/topright"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_column="1">
                <ImageView
                    android:id="@+id/myimagesatic2"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:src="@drawable/warlock" />

                <ImageView
                    android:id="@+id/myimage2"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:src="@drawable/dh" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottomleft"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_row="1"
                android:layout_column="0">
                <ImageView
                    android:id="@+id/myimagesatic3"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:src="@drawable/warrior" />


                <ImageView
                    android:id="@+id/myimage3"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:src="@drawable/druid" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottomright"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_row="1"
                android:layout_column="1">
                <ImageView
                    android:id="@+id/myimagesatic4"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:src="@drawable/rouge" />

                <ImageView
                    android:id="@+id/myimage4"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mage" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_row="2"
                android:layout_column="0">
                <ImageView
                    android:id="@+id/myimagesatic5"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:src="@drawable/dh" />

                <ImageView
                    android:id="@+id/myimage5"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:src="@drawable/warlock" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_row="2"
                android:layout_column="1">
                <ImageView
                    android:id="@+id/myimagesatic6"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:src="@drawable/druid" />

                <ImageView
                    android:id="@+id/myimage6"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:src="@drawable/warrior" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_row="3"
                android:layout_column="0">
                <ImageView
                    android:id="@+id/myimagesatic7"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:src="@drawable/priest" />

                <ImageView
                    android:id="@+id/myimage7"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:src="@drawable/rouge" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_row="3"
                android:layout_column="1">
                <ImageView
                    android:id="@+id/myimagesatic8"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:src="@drawable/dk" />

                <ImageView
                    android:id="@+id/myimage8"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:src="@drawable/priest" />
            </LinearLayout>


        </GridLayout>

    </HorizontalScrollView>
</RelativeLayout>